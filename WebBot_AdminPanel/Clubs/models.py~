from django.db import models

class Club(models.Model):
    name = models.CharField(max_length=255, unique=True)  # Запрещаем дубликаты
    image = models.ImageField(upload_to='uploads/', default='')  # Загрузка изображения
    description = models.TextField(blank=True)  # Можно оставить пустым
    link = models.URLField(max_length=500, blank=True)  # Проверка URL и больше символов

    def __str__(self):
        return self.name
