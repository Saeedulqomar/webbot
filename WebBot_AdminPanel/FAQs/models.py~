from django.db import models

class Question(models.Model):
    question = models.CharField(max_length=255, unique=True)  # Уникальный вопрос
    answer = models.TextField(blank=True)  # Ответ может быть пустым

    def __str__(self):
        return self.question

    class Meta:
        indexes = [
            models.Index(fields=['question']),  # Индекс для быстрого поиска по вопросу
        ]
