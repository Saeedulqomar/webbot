from django.contrib import admin
from django.utils.safestring import mark_safe

from .models import Professor
# Register your models here.


@admin.register(Professor)
class ProfessorAdmin(admin.ModelAdmin):
    list_display = ('fullName', 'linkedIn', 'contactInfo', 'course')
    search_fields = ('fullName', 'course')
    list_filter = ('fullName', 'course')
    list_per_page = 20  # Количество записей на странице

    # Добавление кастомного отображения для поля `photo`:
    def photo_preview(self, obj):
        if obj.photo:
            return mark_safe(f'<img src="{obj.photo.url}" width="50" height="50" />')
        return "No photo"
